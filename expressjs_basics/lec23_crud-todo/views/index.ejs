<%- include("./partials/header.ejs") %>

    <div class="container">
        <div class="row">
            <!-- first col -->
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Add New Student</h2>
                <!-- form -->
                <form method="post">
                    <!-- Name -->
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" />
                    </div>
                    <!-- Age -->
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age" />
                    </div>
                    <!-- Fees  -->
                    <div class="mb-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" id="fees" name="fees" />
                    </div>
                    <!-- submit button -->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <!-- second col -->
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger text-center">List of Student</h2>
                <!-- ejs comment -->
                <%# Show All Data %>
                    <table class="table table-striped table-hover">
                        <!-- table header -->
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">No</th>
                                <th scope="col">Age</th>
                                <th scope="col">Fees</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <!-- table body -->
                        <tbody>
                            <!-- looping for data using ejs syntax -->
                            <% let count = 1 %>
                                <% data.forEach((item) => { %>
                                    <tr>
                                        <td>
                                            <%= count++ %>
                                        </td>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.age %>
                                        </td>
                                        <td>
                                            <%= item.fees %>
                                        </td>
                                        <td>
                                            <!-- edit button -->
                                            <form action="/student/edit/<%= item._id %>" method="get" class="d-inline">
                                                <button type="submit" class="btn">
                                                <i class="fas fa-pen-square text-info"></i>
                                            </button>
                                            </form>
                                            <!-- delete button  -->
                                            <form action="/student/delete/<%= item._id %>" method="post" class="d-inline">
                                                <button type="submit" class="btn">
                                            <i class="fas fa-trash text-danger"></i>
                                            </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>


                        </tbody>
                    </table>
            </div>
        </div>
    </div>

    <%- include("./partials/footer.ejs") %>